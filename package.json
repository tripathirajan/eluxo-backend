{
  "name": "eluxo-backend",
  "version": "1.0.0",
  "description": "Eluxo is a modern full-stack e-commerce platform. This repository contains the backend service responsible for authentication, product management, order processing, and integrations with Cloudinary and email providers.",
  "main": "app.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prepare": "husky",
    "build": "npm run lint:fix && npm run format:fix",
    "build:test": "npm run lint && npm run format",
    "precommit": "npm run build:test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/tripathirajan/eluxo-backend.git"
  },
  "keywords": [
    "nodejs",
    "ecommerce",
    "mongodb",
    "expressjs",
    "cloudinary",
    "nodemailer",
    "jwt-auth",
    "backend-api",
    "eluxo"
  ],
  "author": "Rajan Tripathi <tripathirajan3@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tripathirajan/eluxo-backend/issues"
  },
  "homepage": "https://github.com/tripathirajan/eluxo-backend#readme",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongoose": "^8.17.0"
  }
}
